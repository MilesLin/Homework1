@model IEnumerable<客戶聯絡人>

@{
    var data = Model.ToArray();
}
<div>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary()
        <input type="submit" name="name" value="批次更新" />
        @Html.HiddenFor(model => Model.FirstOrDefault().客戶Id)
        <table class="table">
            <tr>
                <th>職稱</th>
                <th>姓名</th>
                <th>手機</th>
                <th>電話</th>
            </tr>
            @for (int i = 0; i < data.Length; i++)
            {
                <tr>
                    <td>
                        @Html.HiddenFor(modelItem => data[i].Id)
                        @Html.HiddenFor(modelItem => data[i].客戶Id)
                        @Html.HiddenFor(modelItem => data[i].Email)
                        @Html.HiddenFor(modelItem => data[i].姓名)
                        @Html.EditorFor(modelItem => data[i].職稱)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => data[i].姓名)
                    </td>
                    <td>
                        @Html.EditorFor(modelItem => data[i].手機)
                    </td>
                    <td>
                        @Html.EditorFor(modelItem => data[i].電話)
                    </td>
                </tr>
            }

        </table>
    }

</div>